#:kivy 2.1.0

App:
<App>:

<TetrisWidget>:
    cols: 10
    size_hint: (None, 1)
    width: self.height/2
    spacing: 2
    padding: 2
    canvas.before:
        Color:
            rgb: 0.1, 0.1, 0.1
        Rectangle:
            size: self.size
            pos: self.pos

<Panel>:
    canvas.before:
        Color:
            rgb: 0.1, 0.1, 0.1
        Rectangle:
            size: self.size
            pos: self.pos

<GameOver>:
    Button:
        color: 0, 0.25, 0.3, 1
        background_color: 0.15 ,0.15, 0.15, 1
        font_size: self.height * 0.1
        font_name: "label_font.ttf"
        pos_hint: {"center_x": .5, "center_y": 0.5}
        size_hint: 1, 1
        on_press: root.parent.new_game()
        background_normal: ""